{
  "enabledMcpjsonServers": ["context7", "sequential-thinking"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $(git rev-parse --show-toplevel)/.claude/hooks/pre_tool_use_action_router.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Claude waits for your input' |  python3 -m piper -m ${PIPER_DATA_DIR}/en_US-libritts-high --output_file - | ffplay -i pipe: -f wav -nodisp -autoexit"
          },
          {
            "type": "command",
            "command_linux": "notify-send \"Claude waits for your input\" --urgency=critical --icon=dialog-information --hint=string:desktop-entry:code",
            "command": "terminal-notifier -message 'Claude waits for your input' -sound=Blow"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Claude finished its work' |  python3 -m piper -m ${PIPER_DATA_DIR}/en_US-libritts-high --output_file - | ffplay -i pipe: -f wav -nodisp -autoexit"
          },
          {
            "type": "command",
            "command_linux": "notify-send \"Claude finished its work\" --urgency=critical --icon=dialog-information --hint=string:desktop-entry:code",
            "command": "terminal-notifier -message \"Claude finished its work\" -sound=Blow"
          }
        ]
      }
    ]
  }
}
