{
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "serena": {
      "command": "podman",
      "type": "stdio",
      "args": [
        "run",
        "--rm",
        "-i",
        "--network",
        "host",
        "-v",
        "[REPLACE_ME_PROJECT_FULL_PATH]:/workspaces/projects/[REPLACE_ME_PROJECT_NAME]",
        "ghcr.io/oraios/serena:latest",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--transport",
        "stdio"
      ],
      "env": {
        "MCP_TIMEOUT": "6000"
      }
    }
  }
}
